extends layout

block content
	h1= title
	- var message = "Welcome " + user.displayName + "! "
	p= message
		a(href="logout") Log out
	div
		input#inputCourseCode(type="text", placeholder="course code", name="coursecode")
		input#inputTask(type="text", placeholder="task", name="task")
		input#inputDeadline(type="text", name="deadline", placeholder="deadline")
		input#inputWeight(type="number", min="0", max="1", placeholder="0.25", step="0.001", name="weight")
		button#btnSubmit(type="submit") submit
		
	h2 Tasks
	div#tasksList
		table#tasksTable
			tr
				th 
				th Code
				th Task
				th Deadline
				th Weight
				th Priority