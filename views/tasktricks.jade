extends layout

block content
	h1= title
	form#addTask(name="addTask",method="post",action="addTask")
		input#inputCourseCode(type="text", placeholder="course code", name="coursecode")
		input#inputTask(type="text", placeholder="task", name="task")
		input#inputDeadlineDate(type="date", name="deadlinedate")
		input#inputDeadlineTime(type="time", name="deadlinetime")
		input#inputWeight(type="number", min="0", max="1", placeholder="0.25", step="0.001", name="weight")
		button#btnSubmit(type="submit") submit
